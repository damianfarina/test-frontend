.boxes
  lost-utility clearfix
  border-top border-specs
  border-bottom border-specs
  margin-top 20px

  .box
    padding 0.7rem
    transition transitions-delay
    lost-column 1/3 3 0
    box-sizing border-box
    border-right border-specs
    text-transform uppercase
    line-height 5rem
    text-align center

    span
      display inline-block
      vertical-align middle
      line-height normal
      strong
        font-weight bold
        font-size font-size-huge

    &:last-child
      border-right none
