.sidebar:before
  background-color sidebar-bg-color

.summary
  @extend .container
  text-align center

  h1
    text-transform uppercase

  h2
    color h2-color

  .avatar
    position relative

    img
      width 60%
      border-radius 50%
      margin 18% 18% 10px
      border 5px solid sidebar-bg-color

    .flag
      position absolute
      bottom 0
      right 0
      width 18%

  .location
    font-family 'Montserrat', sans-serif
    font-weight normal
    background-image url('/images/location.png')
    background-repeat no-repeat
    padding-left 25px
    font-style italic
    display inline-block
    height 19px
    margin-top 10px
    font-weight 100
