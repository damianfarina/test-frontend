ul.nav-links
  @extend .unstyled-list

  li
    border-bottom border-specs
    padding-left sidebar-padding
    transition transitions-delay
    opacity 0.4

    &:hover
      transition transitions-delay
      opacity 1
      background-color active-link-bg-color

  a
    position relative

    icon-width = 36px
    icon-text-gap = 14px

    display inline-block
    box-sizing border-box
    width 100%
    padding 25px
    padding-left icon-width + icon-text-gap
    padding-right 5px

    color menu-link-color
    font-size font-size-big
    font-weight 700

    &:before
      content ""
      position absolute
      left 0
      top 20px
      width 36px
      height 33px
      background-image url('../images/icons.png')
      background-repeat no-repeat

    &.about:before
      background-position 0 4px

    &.education:before
      background-position 0 -79px

    &.experience:before
      background-position 0 -164px

    &.skills:before
      background-position 0 -248px
