html
  font-family 'Montserrat', sans-serif
  font-weight 400
  font-size 16px
  transition transitions-delay

h1
  margin-top 3rem

h2
  margin-top 2rem
  margin-bottom .5rem
  &.muted
    color color-muted
a
  color links-color
  text-decoration none

.period
  font-size font-size-small
  color color-help

.title
  color color-muted
  font-weight 700

+below(400px)
  html
    font-size 12px

+between(400px, 480px)
  html
    font-size 15px

+between(480px, 580px)
  html
    font-size 6px

+between(580px, 680px)
  html
    font-size 7px

+between(680px, 720px)
  html
    font-size 9px

+between(720px, 860px)
  html
    font-size 10px

+between(860px, 920px)
  html
    font-size 11px

+between(920px, 1000px)
  html
    font-size 12px

+between(1000px, 1200px)
  html
    font-size 13px

+above(1200px)
  html
    font-size 16px
